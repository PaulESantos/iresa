Package: iresa
Type: Package
Title: Índice Regional de Sostenibilidad Ambiental del Perú
Version: 0.1.0
Authors@R: 
    c(person(given = "Paul E.",
             family = "Santos Andrade",
             role = c("aut", "cre"),
             email = "paulefrens@gmail.com",
             comment = c(ORCID = "0000-0002-6635-0375")),
             person(given = "Instituto Peruano de Economía",
